# Application
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3001

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=agendahora
TYPEORM_SYNC=true
TYPEORM_MIGRATIONS_RUN=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-256-bits
JWT_EXPIRATION_TIME=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-different-from-access-256-bits
JWT_REFRESH_EXPIRATION_TIME=7d
JWT_RESET_SECRET=your-super-secret-reset-key-different-from-others-256-bits
JWT_RESET_PASSWORD_EXPIRATION_TIME=1h

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Email (Mailjet)
MAILJET_API_KEY=
MAILJET_SECRET_KEY=
MAIL_FROM=noreply@tuapp.com

# Storage (optional - Cloudflare R2 / AWS S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=auto
AWS_S3_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
AWS_S3_BUCKET_NAME=my-bucket-name
AWS_S3_PUBLIC_BUCKET=my-public-bucket
AWS_S3_PRIVATE_BUCKET=my-private-bucket
AWS_S3_PUBLIC_DOMAIN=https://pub-xxxxx.r2.dev
